<mapper namespace="chinaPress.exam.exam_option.dao.FcExamOptionMapper">
  <resultMap id="BaseResultMap" type="chinaPress.exam.exam_option.model.FcExamOption">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="exam_id" jdbcType="INTEGER" property="examId" />
    <result column="paper_id" jdbcType="INTEGER" property="paperId" />
    <result column="stem_id" jdbcType="INTEGER" property="stemId" />
    <result column="option_id" jdbcType="VARCHAR" property="optionId" />
    <result column="grade" jdbcType="VARCHAR" property="grade" />
    <result column="remarks" jdbcType="VARCHAR" property="remarks" />
    <result column="is_correct" jdbcType="INTEGER" property="isCorrect" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, user_id, exam_id, paper_id, stem_id, option_id, grade, remarks, is_correct
  </sql>
  
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from fc_exam_option
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from fc_exam_option
    where id = #{id,jdbcType=INTEGER}
  </delete>
  
  <insert id="insertSelective" parameterType="chinaPress.exam.exam_option.model.FcExamOption">
    insert into fc_exam_option
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="examId != null">
        exam_id,
      </if>
      <if test="paperId != null">
        paper_id,
      </if>
      <if test="stemId != null">
        stem_id,
      </if>
      <if test="optionId != null">
        option_id,
      </if>
      <if test="grade != null">
        grade,
      </if>
      <if test="remarks != null">
        remarks,
      </if>
      <if test="isCorrect != null">
        is_correct,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="userId != null">
        #{userId,jdbcType=INTEGER},
      </if>
      <if test="examId != null">
        #{examId,jdbcType=INTEGER},
      </if>
      <if test="paperId != null">
        #{paperId,jdbcType=INTEGER},
      </if>
      <if test="stemId != null">
        #{stemId,jdbcType=INTEGER},
      </if>
      <if test="optionId != null">
        #{optionId,jdbcType=VARCHAR},
      </if>
      <if test="grade != null">
        #{grade,jdbcType=VARCHAR},
      </if>
      <if test="remarks != null">
        #{remarks,jdbcType=VARCHAR},
      </if>
      <if test="isCorrect != null">
        #{isCorrect,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  
  <update id="updateByPrimaryKeySelective" parameterType="chinaPress.exam.exam_option.model.FcExamOption">
    update fc_exam_option
    <set>
      <if test="userId != null">
        user_id = #{userId,jdbcType=INTEGER},
      </if>
      <if test="examId != null">
        exam_id = #{examId,jdbcType=INTEGER},
      </if>
      <if test="paperId != null">
        paper_id = #{paperId,jdbcType=INTEGER},
      </if>
      <if test="stemId != null">
        stem_id = #{stemId,jdbcType=INTEGER},
      </if>
      <if test="optionId != null">
        option_id = #{optionId,jdbcType=VARCHAR},
      </if>
      <if test="grade != null">
        grade = #{grade,jdbcType=VARCHAR},
      </if>
      <if test="remarks != null">
        remarks = #{remarks,jdbcType=VARCHAR},
      </if>
      <if test="isCorrect != null">
        is_correct = #{isCorrect,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  
  <!-- 考试id,试卷id,试题id,用户id查询考生考试信息 -->
  <select id="selectExamUserInfo" resultType="java.lang.Integer">
  		select id from fc_exam_option
  		where 1 = 1
  			  <if test="examId!=null"> and exam_id = #{examId} </if>
  			  <if test="paperId!=null"> and paper_id = #{paperId} </if>
  			  <if test="stemId!=null"> and stem_id = #{stemId} </if>
  			  <if test="userId!=null"> and user_id = #{userId} </if>
  </select>
  
  <!-- 通过考试id，用户id查询考生的考生信息 -->
  <select id="selectExamStemOption" resultType="chinaPress.exam.exam_option.vo.ExamStemOption">
  		select stem_id as stemId,
  			   option_id as optionId 
  		from fc_exam_option
  		where 1 = 1
  			  <if test="examId!=null"> and exam_id = #{examId} </if>
  			  <if test="userId"> and user_id = #{userId} </if>
  </select>
  
   <!-- 计算考生考试分数信息 -->
  <select id="selectExamGrade" resultType="java.lang.Integer">
  		select 
  			sum(case when is_correct = 1 then grade else 0 end)
  		from fc_exam_option
  		where 1 = 1
  			  <if test="examId!=null"> and exam_id = #{examId} </if>
  			  <if test="userId"> and user_id = #{userId} </if>
  </select>
  
</mapper>