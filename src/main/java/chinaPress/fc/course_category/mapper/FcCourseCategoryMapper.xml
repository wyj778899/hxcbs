	id, pId AS pid, name, code
	from fc_course_category
	<where>
		<if test="notId != null">and id != #{notId}</if>
		<if test="pid != null">and pId = #{pid}</if>
		<if test="code != null">AND code like CONCAT(#{code},'%')</if>
